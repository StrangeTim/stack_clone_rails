<div class="row">
  <div class="col-sm-6 col-sm-offset-3">
    <h1>Log In</h1>

    <%= form_tag login_path do %>
      <div class="form-group">
        <%= label_tag :username %>
        <%= text_field_tag :username, nil, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= label_tag :password %>
        <%= password_field_tag :password, nil, class: "form-control" %>
      </div>
      <%= submit_tag "Log in" %>
    <% end %>
  </div>
</div>
