<!DOCTYPE html>
<html>
<head>
  <title>StackClone</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <% if flash[:notice] %>
    <div class="flash-wrapper">
      <%= flash[:notice] %>
      <%= flash[:alert] %>
    </div>
  <% end %>

  <div class="container">
    <nav class="navbar navbar-default navbar-fixed-top">
      <ul class="nav navbar-nav">

        <li><%= link_to "StackAnswers", "/" %></li>

        <% if current_user %>

            <span class="top-right">You are logged in as <i><%= current_user.username %></i></span>

          <li class="pull-right">
            <%= link_to "Logout", logout_path %>
          </li>
        <% else %>
          <li class="pull-right"><%= link_to "Login", login_path %></li>
          <li class="pull-right"><%= link_to "Signup",  new_user_path %></li>
        <% end %>

      </ul>
    </nav>

    <div class="row">
      <div class="col-sm-8 col-sm-offset-2">
        <%= yield %>
      </div>
    </div>

  </div>

</body>
</html>
